generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Keyword {
  id        String    @id @default(uuid())
  keyword   String    @unique
  isActive  Boolean   @default(true)
  source    String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  hotspots  Hotspot[] @relation("HotspotToKeyword")

  @@map("keywords")
}

model Hotspot {
  id              String         @id @default(uuid())
  title           String
  content         String?
  source          String
  sourceUrl       String?
  relevanceScore  Float          @default(0)
  matchedKeywords String?
  publishedAt     DateTime?
  views           Int            @default(0)
  likes           Int            @default(0)
  createdAt       DateTime       @default(now())
  notifications   Notification[]
  keywords        Keyword[]      @relation("HotspotToKeyword")

  @@map("hotspots")
}

model Notification {
  id        String   @id @default(uuid())
  hotspotId String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  hotspot   Hotspot  @relation(fields: [hotspotId], references: [id])

  @@map("notifications")
}

model CheckHistory {
  id              String   @id @default(uuid())
  status          String
  message         String?
  keywordsChecked Int      @default(0)
  hotspotsFound   Int      @default(0)
  createdAt       DateTime @default(now())

  @@map("check_histories")
}
